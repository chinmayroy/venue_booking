<odoo>
    <data>

        <!-- Search View -->
        <record id="venue_facilities_search_view" model="ir.ui.view">
            <field name="name">venue.facilities.view</field>
            <field name="model">venue.facilities</field>
            <field name="arch" type="xml">
                <search string="Teams">
                    <field name="food" string="Food" filter_domain="[('food','ilike',self)]"/>
                    <field name="stage" string="Stage Qty" filter_domain="[('stage','ilike',self)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <!-- Kanban View -->
        <record id="venue_facilities_kanban_view" model="ir.ui.view">
            <field name="name">venue.facilities.kanban</field>
            <field name="model">venue.facilities</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban" string="Venue Facilities">
                    <field name="food"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_content oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="food"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Tree View -->
        <record id="venue_facilities_tree_view" model="ir.ui.view">
            <field name="name">venue.facilities.tree.view</field>
            <field name="model">venue.facilities</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <tree string="Venue Facilities">
                    <field name="food"/>
                    <field name="stage"/>
                    <field name="chair"/>
                    <field name="table"/>
                </tree>
            </field>
        </record>


        <!-- Form View -->
        <record id="venue_facilities_form_view" model="ir.ui.view">
            <field name="name">venue.facilities.form.view</field>
            <field name="model">venue.facilities</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Venue Facilities">
                    <header>

                    </header>
                    <sheet>
                        <group>
                            <field name="food"/>
                            <field name="stage"/>
                            <field name="chair"/>
                            <field name="table"/>
                        </group>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="venue_booking.action_venue_facilities">
            <field name="name">Venue Facilities</field>
            <field name="res_model">venue.facilities</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create o_view_nocontent_smiling_face">Add a new record.</p>
            </field>
        </record>


    </data>
</odoo>
