<odoo>
    <data>

        <!-- Search View -->
        <record id="venue_booking_list_search_view" model="ir.ui.view">
            <field name="name">venue.booking.list.view</field>
            <field name="model">venue.booking.list</field>
            <field name="arch" type="xml">
                <search string="Booking List">
                    <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                </search>
            </field>
        </record>


        <!-- Kanban View -->
        <record id="venue_booking_list_kanban_view" model="ir.ui.view">
            <field name="name">venue.booking.list.kanban</field>
            <field name="model">venue.booking.list</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban" string="Booking List">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_content oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li>
                                            <p>Program Name:
                                                <field name="program"/>
                                            </p>
                                        </li>
                                        <li>
                                            <p>Start Date:
                                                <field name="start_date"/>
                                                End Date:
                                                <field name="end_date"/>
                                            </p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Tree View -->
        <record id="venue_booking_list_tree_view" model="ir.ui.view">
            <field name="name">venue.booking.list.tree.view</field>
            <field name="model">venue.booking.list</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <tree string="Booking List">
                    <field name="name"/>
                    <field name="program"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>


        <!-- Form View -->
        <record id="venue_booking_list_form_view" model="ir.ui.view">
            <field name="name">venue.booking.list.form.view</field>
            <field name="model">venue.booking.list</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Booking List">
                    <header>
                        <button name="action_send_email" string="Send Mail" type="object" class="oe_highlight"
                                data-hotkey="m"/>
                        <button special="cancel" data-hotkey="c" string="Cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <h3>
                                <label for="name" string="Customer Name"/>
                                <br/>
                                <field name="name"/>
                            </h3>
                        </group>
                        <group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="program"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="details"/>
                        </group>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="venue_booking.action_venue_booking_list">
            <field name="name">Booking List</field>
            <field name="res_model">venue.booking.list</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create o_view_nocontent_smiling_face">Add a new record.</p>
            </field>
        </record>


    </data>
</odoo>
